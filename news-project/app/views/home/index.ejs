<!DOCTYPE HTML>
<html lang="en">

<head>
	<meta charset="UTF-8">

	<title>News Portal</title>

	<!-- JQuery -->
	<script src="js/jquery-2.2.4.min.js"></script>

	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
	 crossorigin="anonymous">

	<!-- incluindo css -->
	<link href="css/style.css" rel="stylesheet">

	<!-- favicon -->
	<link rel="shortcut icon" href="images/favicon.ico" />
</head>

<body>

	<nav class="navbar navbar-default navbar-static-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
				 aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>

				<img src="images/logo.png" />
			</div>

			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a href="index.html">HOME</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>


	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="news_wrapper">
					<span class="news_author">
						<%= news[0].author %>
					</span>
					<a href="news?id_news=<%= news[0].id_news %>" class="news_title">
						<% news[0].title %>
					</a>
					<span class="event_date">
						<%= news[0].event_date %>
					</span>
					<br />
					<p class="summary">
						<%= news[0].summary %>
					</p>
				</div>
			</div>

			<div class="col-md-4">
				<div class="news_wrapper">
					<span class="news_author">
						<%= news[1].author %>
					</span>
					<a href="news?id_news=<%= news[1].id_news %>" class="news_title">
						<% news[1].title %>
					</a>
					<span class="event_date">
						<%= news[1].event_date %>
					</span>
					<br />
					<p class="summary">
						<%= news[1].summary %>
					</p>
				</div>
			</div>
		</div>

		<div class="row">
			<% for (var i = 2; i< news.length; i++) { %>
				<div class="col-md-4">
					<div class="news_wrapper">
							<span class="news_author">
						<%= news[i].author%>
							</span>
							<a href="news?id_news=<%= news[i].id_news %>" class="news_title">
								<%= news[i].title%>
							</a>
							<span class="event_date">
								<%= news[i].event_date%>
							</span>
							<br />
							<p class="summary">
								<%= 	news[i].summary%>
							</p>
					</div>
				</div>
				<% } %>
		</div>

		<div class="row see_more">
			<button type="button" class="btn btn-default">
				<a href="newsletter">See All News</a>
			</button>
		</div>

	</div>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
	 crossorigin="anonymous"></script>

</body>

</html>